# WhatsApp Web Panel - Environment Variables
# Copy this file to .env and update the values

# Server Port
PORT=3000

# Graceful shutdown (ms)
#SHUTDOWN_TIMEOUT_MS=10000

# Authentication - CHANGE THESE IN PRODUCTION!
SITE_PASSWORD=your-secure-password-here
SESSION_SECRET=your-random-session-secret-here

# Admin bootstrap (first-run user creation). If ADMIN_BOOTSTRAP_PASSWORD is not set,
# it falls back to SITE_PASSWORD.
ADMIN_BOOTSTRAP_USERNAME=admin
ADMIN_BOOTSTRAP_PASSWORD=your-admin-bootstrap-password
ADMIN_BOOTSTRAP_NAME=Admin

# Google Gemini API Key (Optional, for AI Assistant)
GEMINI_API_KEY=your-gemini-api-key

# Vertex AI API Key (Optional, for AI Assistant)
VERTEX_API_KEY=your-vertex-api-key

# CORS Origins (comma-separated list, or * for development only)
CORS_ORIGINS=http://localhost:3000

# Node Environment
NODE_ENV=development

# Redis (optional; enables Redis-backed sessions + Socket.IO adapter)
#REDIS_URL=redis://127.0.0.1:6379
#REDIS_PREFIX=wp-panel:

# Metrics (Prometheus)
#METRICS_ENABLED=false
#METRICS_TOKEN=your-metrics-bearer-token  # production'da Ã¶nerilir

# Logging
LOG_LEVEL=info

# Background jobs (scheduler/cleanup). Keep true in single-instance; in multi-instance,
# leader election is handled via SQLite locks.
ENABLE_BACKGROUND_JOBS=true

# Optional overrides
#DATA_DIR=/var/lib/wp-panel/data
#LOGS_DIR=/var/log/wp-panel
#SESSION_DIR=/var/lib/wp-panel/session
#DB_PATH=/var/lib/wp-panel/whatsapp.db
#MEDIA_DIR=/var/lib/wp-panel/media

# Leader lock TTLs (ms)
#SCHEDULER_LOCK_TTL_MS=180000
#CLEANUP_LOCK_TTL_MS=900000

# WhatsApp init timeout (ms). Prevents /api/connect from hanging forever if Puppeteer gets stuck.
#WHATSAPP_INIT_TIMEOUT_MS=60000

# Webhook delivery tuning (optional)
#WEBHOOK_TIMEOUT=10000
#WEBHOOK_MAX_RETRIES=3
#WEBHOOK_RETRY_BASE_MS=1000
#WEBHOOK_CONCURRENCY=2
#WEBHOOK_QUEUE_LIMIT=2000

# API rate limits (express-rate-limit)
#API_RATE_LIMIT_IP_WINDOW_MS=900000
#API_RATE_LIMIT_IP_MAX=300
#API_RATE_LIMIT_USER_WINDOW_MS=900000
#API_RATE_LIMIT_USER_MAX=150

# Password policy (optional)
#PASSWORD_MIN_LENGTH=8
#PASSWORD_REQUIRE_UPPER=false
#PASSWORD_REQUIRE_LOWER=false
#PASSWORD_REQUIRE_NUMBER=false
#PASSWORD_REQUIRE_SYMBOL=false

# Retention & cleanup (optional)
#LOG_RETENTION_DAYS=30
#SCRIPT_LOG_RETENTION_DAYS=30
#MESSAGE_RETENTION_DAYS=90
#CLEANUP_DAILY_CRON="0 3 * * *"
#CLEANUP_WEEKLY_CRON="0 4 * * 0"
